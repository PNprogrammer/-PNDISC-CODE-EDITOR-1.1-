<!--Code input-->

<textarea id="codeinput"></textarea>

<div id="runbox">

<!--run button-->

<button type="button" id="runb" onclick="run()">Run code</button>

</div>

<!--run script-->

<script>

function run()

{

var codeinput = document.getElementById("codeinput").value;

var website = window.open();

website.document.write(codeinput)

}

</script>

<div id="cibcbox">

<!--change input background color picker-->


<input id="cibcp" type="color">

<!--change input background color button-->

<button type="button" id="cibcb" onclick="cibc()">Change input background color</button>

</div>

<!--change input background color script-->

<script>

function cibc()

{

var codeinput = document.getElementById("codeinput").style;

var cibcp = document.getElementById("cibcp").value;

codeinput.backgroundColor=cibcp;

}

</script>

<div id="cicbox">

<!--change input color picker-->

<input id="cicp" type="color">

<!--change input color button-->

<button type="button" id="cicb" onclick="cic()">Change input color</button>

</div>

<!--change input color script-->

<script>

function cic()

{

var codeinput = document.getElementById("codeinput").style;

var cicp = document.getElementById("cicp").value;

codeinput.color=cicp;

}

</script>

<div id="cwbcbox">

<!--change website background color picker-->

<input id="cwbcp" type="color">

<!--change website background color button-->

